extends ../layout

block content

  .col-md-2.col-sm-2.col-xs-4.sidebar
    p.content
      a(href= '/books/new'): h3.index Add a Book
      a(href= '/books/new'): img.books(src= 'http://assets.feministing.com/wp-content/uploads/2016/01/books.jpg') 
    p
      a(href= '/authors/new'): h3.index Add an Author
      a(href= '/authors/new'): img.books(src='http://www.famousauthors.org/famous-authors.jpg')

  table.col-md-9.col-sm-9.col-xs-4.col-sm-offset-1.panel
    tbody
      for author in allAuthors
        tr
          td(rowspan= 2): img.author(src= author.portrait)
          td: h3= author.fname + " " + author.lname
          td: a(href= '/authors/edit/' + author.id).glyphicon.glyphicon-edit
          td: a(href= 'authors/delete/' + author.id).glyphicon.glyphicon-remove
        tr
          td(colspan= 3)= author.biography
         
