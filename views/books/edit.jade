extends ../layout

block content
  
  .row
    .col-sm-4
      img.books(src=theBook.cover)
  
    .col-sm-4
      form(action="/books/" + theBook.bid + "?_method=put", method="post")
        div
          p title
          input(type="text" name="title" value=theBook.title)
          
          p authors
          input(type="text" name="fname" value=theBook.fname)
          input(type="text" name="lname" value=theBook.lname)
          input(type="text" name="fname" value=theBook.fname)
          input(type="text" name="lname" value=theBook.lname)
          input(type="text" name="fname" value=theBook.fname)
          input(type="text" name="lname" value=theBook.lname)
          
          p genre
          input(type="text" name"genre" value=theBook.genre)
          
          p Description
          textarea(name='description' value=theBook.description)

          p
          input(type="submit")
